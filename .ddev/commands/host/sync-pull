    echo "âš™ï¸ Importazione database..."
    ddev start
    ddev import-db --src=data_sync.sql
    
    echo "ğŸ§¹ Pulizia file SQL importato..."
    rm data_sync.sql
else
    echo "â„¹ï¸ Nessun dump del database trovato nel pull, procedo con l'avvio..."
    ddev start
fi

echo "âœ¨ Ambiente aggiornato!"